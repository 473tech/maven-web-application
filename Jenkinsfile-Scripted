node{
     def mavenHome = tool name: 'maven-3.9.4'

    stage("Git Clone"){
        sh "echo cloning the code from github"
        git "https://github.com/473tech/maven-web-application.git"
    }

    stage("Maven Build"){
        sh "${mavenHome}/bin/mvn package"
    }

    stage("Maven Sonar"){
        sh "${mavenHome}/bin/mvn sonar:sonar"
    }

    stage("Maven Sonar quality gate"){
        sh "echo enforcing Quality Gate"
    }

    stage("Maven deploy"){
        sh "${mavenHome}/bin/mvn deploy"
    }

    stage("Deploy to UAT"){
        deploy adapters: [tomcat9(credentialsId: 'tomcatId', path: '', url: 'http://50.16.112.163:8080')], contextPath: null, war: 'target/*.war'
    }
    stage("Approval stage"){
        timeout(activity: true, time: 120, unit: 'SECONDS') {
            mail bcc: '', body: 'Please check the project deploy to your environment', cc: '', from: '', replyTo: '', subject: 'Please approve or abort', to: 'Tolux17@gmail.com, lamidewiliams@gmail.com'
            input 'Please approve or abort'
        }
    }

    stage("Deploy to Production"){
        deploy adapters: [tomcat9(credentialsId: 'tomcatId', path: '', url: 'http://50.16.112.163:8080')], contextPath: null, war: 'target/*.war'
    }

    stage("Email Notification"){
        mail bcc: '', body: 'Please check the project deploy to your environment', cc: '', from: '', replyTo: '', subject: 'Application deployed to production', to: 'Tolux17@gmail.com, lamidewiliams@gmail.com'
    }
    
}
